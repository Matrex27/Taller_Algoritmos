Scanner sc = new Scanner(System.in);

        String usuario, conIng , opcion;
        String conA = "Fisica2022", conB = "Quimicos2022";
        int cont = 4;

        System.out.print("Cual es su ingreso: \n 'a': Invitado\n 'b': Administrador\n ");
        opcion = sc.next();
        
        System.out.println("Ingrese su usuario: ");
        usuario = sc.next();

        System.out.println("Ingrese su contraseÃ±a: ");
        conIng = sc.next();
        
        
        
        
        
        if (opcion.equals("A")) {
            while(cont>0){
                if(conIng.equals(conA)){
                System.out.println("La contrasena ingresada es correcta");
                System.out.println("Bienvenido al sistema "+usuario);
                break;
                }else{
                    System.out.println("Contrasena incorrecta, "+cont+" intentos restantes ! ");
                    System.out.println("Ingrese nuevamente la contrasena");
                    conIng = sc.next();
                }
                cont--;
                if(cont == 0){
                    System.out.println("Error de ingreso !!!");
                }
                
            }
            
                    
        }
        
        
        
        if (opcion.equals("B")) {
            while(cont>0){
                if(conIng.equals(conB)){
                System.out.println("La contrasena ingresada es correcta");
                System.out.println("Bienvenido al sistema "+usuario);
                break;
                }else{
                    System.out.println("Contrasena incorrecta, "+cont+" intentos restantes ! ");
                    System.out.println("Ingrese nuevamente la contrasena");
                    conIng = sc.next();
                }
                cont--;
                if(cont == 0){
                    System.out.println("Error de ingreso !!!");
                }
                
            }
            
                    
        }
